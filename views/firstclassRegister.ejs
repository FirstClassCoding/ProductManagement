<!DOCTYPE html>
<html>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter&display=swap" rel="stylesheet">

    <head>
        <title>FirstClassCoding Login</title>
        <link rel="stylesheet" href="style.css">
    </head>

    <style>
        .main-table, th, td {
        border: 2px solid black;
        border-collapse: collapse;
        width: 100%;
        }
    </style>

    <body class="mainbg">

        <div class="blue-bg master-head">
            <img src="FirstClassCoding_LOGO.png" class="master-header-logo">
            <p class="master-head master-firstclasscoding-text"><b>FirstClassCoding</b></p>
        </div>

        <h1 class="register-header">Register Page</h1>

        <div class="register-box">
            <form action="/register" method="post" novalidate>
                <div class="enter-register">

                    <label for="_name">Name</label>
                    <input type="text" name="user_name" id="_rname" class="enter-data-register" value="<%= (locals.old_data) ? old_data.user_name : '' %>" placeholder="Name" required>

                    <label for="_email">Email</label>
                    <input type="email" name="user_email" id="_remail" class="enter-data-register" value="<%= (locals.old_data) ? old_data.user_email : '' %>" placeholder="Email" required>

                    <label for="_pass">Password</label>
                    <input type="password" name="user_pass" id="_rpass" class="enter-data-register" placeholder="Password" required>

                <button type="submit" class="register-btn">Sign Up</button>

                <p class="enter-login">Have any account? <a href="/">Login</a> Here!</p>

                <% if (locals.register_error) {
                    register_error.forEach(function(error_msg) { %>

                    <div class="alert-box"><%= error_msg %></div>

                <% })
                } %>

            </form>
        </div>

    </body>

</html>